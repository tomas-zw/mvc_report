{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}My Application{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ absolute_url('css/base.css') }}"/>
        {% endblock %}
    </head>
    <body>

        {{ include('header.html.twig')}}
        {{ include('navbar.html.twig')}}

        {% block body %}
            <div id="content">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}

        {{ include('footer.html.twig')}}

    </body>
</html>
