{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block content %}
<div class='book-grid'>

    {{ include('sideBar.html.twig')}}

    <div class='book-container'>
        {% for book in books%}

            <div class='book'>
                <img class='thumbnail' src="{{asset(book.image)}}" alt={{book.title}}>
                <div>
                    <a href="{{ path('product_by_id', {bookId: book.id}) }}">
                    <h2>{{book.title}}</h2>
                    </a>
                    <p>Author: {{book.author}}</p>
                    <p>isbn: {{book.isbn}}</p>
                    <a href="{{ path('product_delete_by_id', {bookId: book.id}) }}">Delete</a>
                    <a href="{{ path('product_update', {bookId: book.id}) }}">Update</a>
                </div>
            </div>

        {% endfor %}
    </div>

</div>
{% endblock %}
