{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block content %}
<div class='book-grid'>

    {{ include('sideBar.html.twig')}}

    <div class='book-container'>

            <div class='book'>
                <img class='full-img' src="{{asset(book.image)}}" alt={{book.title}}>
                <div>
                    <h2>{{book.title}}</h2>
                    <p>Author: {{book.author}}</p>
                    <p>isbn: {{book.isbn}}</p>
                </div>
            </div>

    </div>

</div>
{% endblock %}
