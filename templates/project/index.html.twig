{% extends 'project/project_base.html.twig' %}

{% block title %}Casino{% endblock %}

{% block content %}

    <h1>Texas Hold'em</h1>

    <div class='card-grid'>

    {% for card in deck.deck %}
       {% set suit = card.getColor() %}
            <div class='card {{ suit }}'>
                <p>{{ card.getValue() }}</p>
                <p class='suits'>{{ deck.suits[suit] }}</p>
            </div>
    {% endfor %}

    </div>


{% endblock %}
